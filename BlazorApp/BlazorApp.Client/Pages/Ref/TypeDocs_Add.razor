    private async Task Save()
    {
        try
        {

            if (typedocs == null || typedocs.Code == null || typedocs.Name == null)
            {
                error = "Не заполнено полностью";
            }
            else
            {

                var clien = await HttpClient.PostAsJsonAsync($"TypeDocs", typedocs);
                if (clien.IsSuccessStatusCode)
                {
                    NavManager.NavigateTo("/TypeDocs");
                }
                else
                {
                    var cd = await clien.Content.ReadAsStringAsync();
                    error = cd;
